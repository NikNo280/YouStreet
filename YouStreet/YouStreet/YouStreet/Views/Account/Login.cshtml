@model YouStreet.ViewModels.LoginViewModel

<div class="login-clean">
    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration"><i class="icon ion-ios-navigate"></i></div>
        <div>
            <input asp-for="UserName" class="form-control" type="text" name="username" placeholder="UserName">
            <span asp-validation-for="UserName"></span>
        </div>
        <div>
            <input asp-for="Password" class="form-control" type="password" name="password" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" />
        </div>
        <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Log In</button></div><a class="forgot" href="#">Forgot your email or password?</a>
    </form>
</div>